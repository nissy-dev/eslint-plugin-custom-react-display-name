{
  "name": "eslint-plugin-ts-template",
  "description": "TODO: write some description",
  "version": "0.0.1",
  "main": "dist/index.js",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "author": "nissy-dev <nd.12021218@gmail.com> (https://github.com/nissy-dev)",
  "bugs": {
    "url": "https://github.com/nissy-dev/eslint-plugin-ts-template/issues"
  },
  "homepage": "https://github.com/nissy-dev/eslint-plugin-ts-template",
  "keywords": [
    "eslint",
    "eslint-plugin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nissy-dev/eslint-plugin-ts-template.git"
  },
  "scripts": {
    "prepare": "git config --local core.hooksPath .githooks",
    "build": "rm -rf dist/** && tsc",
    "new-rule": "node script/new-rule.mjs",
    "test": "jest",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:tsc": "tsc",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/experimental-utils": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npx eslint --fix",
      "npx prettier --write",
      "git add"
    ]
  }
}
